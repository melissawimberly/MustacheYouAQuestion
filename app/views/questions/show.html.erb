


<div class="row pull-left">
<%= button_to "+", question_votes_path(@question, :vote_value => 1) %>
  <h2><%= @sum %></h2>
<%= button_to "-", question_votes_path(@question, :vote_value => -1) %>
</div>


<!-- <button type="button" class="btn btn-default btn-md">
  <span class="glyphicon glyphicon-star" aria-hidden="true"></span> Star
</button> -->

<div class="col-md-offset-2 col-md-10">
  <h2><%= @question.title %></h2>
  By: <%= link_to @question.user.username, user_path(@question.user) %>
  <br><%= @question.description %>
</div>

  <div class="col-md-offset-2 col-md-10">
  	 <% @question.tags.each do |tag| %>
  		<!--<%= link_to tag.name, tag_path %>-->
      <!-- GG Style tags -->
      <%= render partial: "question_tag", locals: {tag: tag} %>
  	<% end %>

  </div>

  <div class="col-md-offset-2 col-md-10">
    Asked On : <%= @question.created_at.strftime('%Y-%m-%d %H:%M:%S') %>
  </div>

  <diV class="col-md-offset-2 col-md-10"> <h4> Answers </h4></div>


    <% @question.answers.each do |answer|%>
      <%= render partial: "answers/show_answer", locals: { question: @question, answer: answer } %>
    <%end%>

  <div class="col-md-offset-2 col-md-10 field-margin-top">
    <% if current_user %>
      <%= form_tag(question_answers_path(@question)) %>
          <%= text_area_tag :description %>
          <div>
          <%= submit_tag "Add Your Answer" %>
          <div>
    <% end %>
  </div>



