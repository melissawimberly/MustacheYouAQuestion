<div class="col-md-offset-4 col-md-4">
  <form class="form-signin" method="POST" action="./signup">
          <h2 class="form-signin-heading">New Account</h2>



          <label for="inputUsername" class="sr-only">Username:</label>
          <input id="inputUsername" class="form-control field-margin" placeholder="Username" name="user[username]" required >

          <label  class="sr-only">Email address</label>
          <input type="email" id="inputEmail" class="form-control field-margin" placeholder="Email address" name="user[email]"required >
          <label for="inputPassword" class="sr-only">Password</label>
          <input type="password" id="inputPassword" class="form-control field-margin" placeholder="Password" name="user[password]"required>
          <label for="inputPasswordConfirmation" class="sr-only">Confirm Password</label>
          <input type="password" id="inputPasswordConfirmation" class="form-control field-margin" placeholder="Confirm Password" name="user[password_confirmation]" required>



          <button class="btn btn-lg btn-primary btn-block field-margin"  type="submit">Create New Account</button>
  </form>
</div>