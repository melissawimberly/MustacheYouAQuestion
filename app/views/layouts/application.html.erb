      <title>MYAQ</title>
      <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
      <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
      <%= csrf_meta_tags %>

  </head>

  <body>

    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">MYAQ</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <% if current_user %>
                <form class="navbar-form navbar-right" method="GET" action="/logout">
                  <button type="submit" class="btn btn-success">Logout</button>
                </form>

            <% else %>
               <form class="navbar-form navbar-right" method="POST" action="/login">
                  <div class="form-group">
                    <input type="text" placeholder="Email" class="form-control" name="user[email]">
                  </div>
                  <div class="form-group">
                    <input type="password" placeholder="Password" class="form-control" name="user[password]">
                  </div>
                  <button type="submit" class="btn btn-success">Login</button>
                    <%= link_to "Signup", signup_path, :class => "btn btn-primary" %>
                </form>



            <% end %>

                  </div><!--/.navbar-collapse -->
      </div>
    </nav>

    <div class="container">

      <!-- Start Flash -->
      <% if flash[:notice] %>
      <div id="mustache" class="row">
        <div class="col-md-12" id="error-panel">
              <div class="alert alert-danger" role="alert"><%= flash[:notice] %></div>
        <div>
      </div>
      <%end%>
      <!-- End Flash -->

      <div class="row">
        <%= yield %>
      </div>
      <hr>


    </div> <!-- /container -->



  </body>
